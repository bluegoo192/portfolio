extends layout

block content
  #app
    .screen.flex.center-flex-column
      .test
        #maintext
          h1.large Hi.
          h1#intro I'm #[br] Arthur
        #subtitle
          h2 I like computer stuff.
    .screen
      .content.center
        // h1 Pick my brain
        #searchbox.flex
          .filter(v-for="(item, index) of filters")
            span {{ item.pretty_name }}
            span.close(@click="remove(index)") x
          input#search(
            autocomplete="off" v-model.trim="query" @keyup.enter="addFilter()"
            @keydown.down="changeCurrentSuggestion(1)"
            @keydown.up="changeCurrentSuggestion(-1)"
            v-on:keydown.delete="deleteFilter"
            v-bind:placeholder="searchPlaceholder")
        #results(v-if="query.length > 0")
          ul
            li.suggestion(v-for="suggestion of suggestions" 
            v-bind:class="{ highlighted: suggestion === currentSuggestion }"
            @click="addFilter(suggestion)") 
              h4 {{ suggestion.pretty_name }}
              p {{ suggestion.summary }}
      
block scripts
  script(src='/javascripts/index.js')
  script(async, defer, src="https://unpkg.com/axios/dist/axios.min.js", onload="app.loadTechs()")
