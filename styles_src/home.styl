@import constants

#maintext

  h1
    display: inline-block
    font-size: 3em

  h1.large
    font-size: 9em
    margin-right: 24px

#search
  font-size: 1em
  border-radius: 4px
  border: none
  width: 100%
  background-color: transparent

#searchbox
  padding: 12px
  background-color: white-color

li.suggestion:first-child
  background-color: #fff

li.filter
  padding: 4px 8px
  background-color: theme-color
  border-radius: 2px
  display: inline
  color: white-color
  box-sizing: border-box
  margin-right: 8px

  span.close
    margin-left: 8px
    cursor: pointer
