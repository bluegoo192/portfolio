@import constants

#maintext

  h1
    display: inline-block
    font-size: 3em

  h1.large
    font-size: 9em
    margin-right: 24px

#search
  font-size: 1em
  border-radius: 4px
  border: none
  flex-grow: 99
  margin-bottom: 8px
  background-color: transparent

#searchbox
  padding: 12px
  border-top-left-radius: 2px
  border-top-right-radius: 2px
  padding-bottom: 4px
  background-color: white-color
  flex-wrap: wrap

#results
  margin-top: 4px
  background-color: white-color
  border-radius: 2px

li.suggestion
  padding: 4px 8px

  &.highlighted
    background-color: theme-color
    color: white-color

.filter
  padding: 4px 8px
  background-color: theme-color
  border-radius: 2px
  display: inline-block
  color: white-color
  box-sizing: border-box
  margin-right: 8px
  margin-bottom: 8px

  span.close
    margin-left: 8px
    cursor: pointer
